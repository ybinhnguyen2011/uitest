<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression Test" parallel="tests" thread-count="10" >
    <test name="Global UI" parallel="tests" thread-count="10" >
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="test.global.footer.FooterTest" />
            <class name="test.computer.BuyingStandardComputerTest" />
        </classes>
    </test>
    <test name="Buying Computer" parallel="tests" thread-count="10" >
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="test.computer.BuyingCheapComputerTest" />
        </classes>
    </test>


</suite>
